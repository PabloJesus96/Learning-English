                        android:layout_height="150dp"
                        android:src="@drawable/june"
                        android:adjustViewBounds="true"
                        android:layout_margin="8dp"
                        android:scaleType="center"/>

                    <TextView
                        android:id="@+id/tv_question4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/iv_june"
                        android:layout_marginTop="15dp"
                        android:textSize="9pt"
                        android:text="@string/what_are_show_in_the_picture"
                        android:paddingLeft="20dp"
                        android:textStyle="bold"/>

                    <RadioGroup
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:id="@+id/rdg_shorts"
                        android:layout_toRightOf="@id/iv_june"
                        android:layout_below="@id/tv_question4"
                        android:paddingLeft="20dp"
                        android:paddingTop="10dp">

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/february"/>

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/november"/>

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/june"
                            android:id="@+id/rb_june"
                            android:layout_marginBottom="7dp"/>
                    </RadioGroup>

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
