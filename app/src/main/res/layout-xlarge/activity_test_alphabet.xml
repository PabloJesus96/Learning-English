<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_test_alphabet"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@drawable/degradado_guindo"
    tools:context=".activities.test.TestAlphabet">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/test_alphabet_numbers"
        android:id="@+id/tv_alphabet"
        android:layout_gravity="center"
        android:textSize="20dp"
        android:textColor="#11f7cd"
        android:fontFamily="monospace"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:id="@+id/cv_data"
                android:elevation="15dp"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="15dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/what_letter_is"
                        android:id="@+id/tv_bi"
                        android:textSize="18dp"
                        android:textColor="#0604a1" />
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="20dp"
                        android:src="@drawable/b"
                        android:id="@+id/iv_bi"
                        android:layout_toRightOf="@+id/tv_bi" />
                    <RadioGroup
                        android:id="@+id/rdgGrupo"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_below="@id/tv_bi"
                        android:layout_marginBottom="10dp"
                        android:background="@color/cardview_light_background"
                        >
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/ef_"
                            android:id="@+id/rb_ef"
                            android:layout_alignParentTop="true"
                            android:layout_toRightOf="@+id/rdgGrupo"
                            android:layout_toEndOf="@+id/rdgGrupo" />
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/em_"
                            android:id="@+id/rb_em"
                            android:layout_alignTop="@+id/iv_bi"
                            />
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/bi_"
                            android:id="@+id/rb_bi"
                            android:layout_below="@+id/iv_bi"
                            />
                    </RadioGroup>


                </RelativeLayout>


            </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:id="@+id/cv_data2"
            android:layout_below="@id/cv_data"
            android:elevation="15dp"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/what_is_the_name"
                android:id="@+id/tv_z"
                android:textSize="18dp"
                android:textColor="#0604a1"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/rdgDos"
                android:layout_marginBottom="10dp"
                android:layout_below="@id/tv_z"
                >
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/zi_"
                    android:id="@+id/rb_zi"
                    android:layout_below="@+id/tv_z"
                    />
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ci"
                    android:id="@+id/rb_ci"
                    android:layout_below="@+id/tv_z"
                    />
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/arr"
                    android:id="@+id/rb_arr"
                    android:layout_below="@+id/tv_z"

                    />
            </RadioGroup>
            </RelativeLayout>
            </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"

            android:id="@+id/cv_data3"
            android:layout_below="@id/cv_data2"
            android:elevation="15dp"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/what_letter_is_em"
                android:id="@+id/tv_eme"
                android:textSize="18dp"
                android:textColor="#0604a1"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp"
                android:id="@+id/rdgTres"
                android:layout_below="@+id/tv_eme">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_err"
                    android:layout_below="@+id/tv_eme"
                    />
                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="30dp"
                    android:src="@drawable/r"
                    android:id="@+id/iv_r"
                    android:layout_below="@+id/tv_eme"
                    />
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_es"
                    />
                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="30dp"
                    android:src="@drawable/s"
                    android:id="@+id/iv_s"
                    />
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_m"
                    />
                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="30dp"
                    android:src="@drawable/m"
                    android:id="@+id/iv_m"
                    />
            </RadioGroup>
            </RelativeLayout>
            </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"

            android:id="@+id/cv_data4"
            android:layout_below="@id/cv_data3"
            android:elevation="15dp"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/what_letter_"
                android:id="@+id/tv_gii"
                android:textSize="18dp"
                android:textColor="#0604a1"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
            <ImageView
                android:layout_width="25dp"
                android:layout_height="20dp"
                android:src="@drawable/g"
                android:id="@+id/iv_g"
                android:layout_toRightOf="@+id/tv_gii"
                />
            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rdgCuatro"
                android:layout_below="@+id/tv_gii"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/llei"
                    android:id="@+id/rb_llei"
                    android:layout_below="@id/tv_gii"
                    />
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/kei"
                    android:id="@+id/rb_kei"

                    />
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/gi"
                    android:id="@+id/rb_gii"
                    />
            </RadioGroup>
            </RelativeLayout>
            </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:id="@+id/cv_data5"
            android:layout_below="@id/cv_data4"
            android:elevation="15dp"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/listen_and_select_answer"
                android:id="@+id/tv_listening"
                android:textSize="18dp"
                android:textColor="#0604a1"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/bocina"
                android:id="@+id/bt_pi"
                android:backgroundTint="#fdcf05"
                android:layout_toRightOf="@id/tv_listening"
                 />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rdgCinco"
                android:layout_below="@+id/tv_listening"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp"
                >
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/a"
                    android:id="@+id/rb_letter_a"
                    android:layout_below="@id/tv_em"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/z"
                    android:id="@+id/rb_letter_z"
                    android:layout_above="@+id/tv_mother"
                    android:layout_toRightOf="@+id/ch_green"
                    android:layout_toEndOf="@+id/ch_green" />
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/p"
                    android:id="@+id/rb_letter_p"
                    android:layout_below="@+id/tv_pi"
                    />

            </RadioGroup>

        </RelativeLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:id="@+id/cv_data6"
                android:layout_below="@id/cv_data5"
                android:elevation="15dp"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="15dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/how_much_is_five"
                        android:id="@+id/tv_five"
                        android:textSize="18dp"
                        android:textColor="#0604a1"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />

                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/rdgsix"
                        android:layout_below="@+id/tv_five"
                        android:orientation="horizontal"
                        android:layout_marginBottom="10dp"
                        >
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/one"
                            android:layout_below="@id/tv_five"/>
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/five"
                            android:id="@+id/rb_number_five"
                             />
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/two"
                            android:id="@+id/rb_number_two"

                            />

                    </RadioGroup>

                </RelativeLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:id="@+id/cv_data7"
                android:layout_below="@id/cv_data6"
                android:elevation="15dp"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="15dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/how_much_is_one_three"
                        android:id="@+id/tv_four"
                        android:textSize="18dp"
                        android:textColor="#0604a1"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />

                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/rdgseven"
                        android:layout_below="@+id/tv_four"
                        android:orientation="horizontal"
                        android:layout_marginBottom="10dp"
                        >
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/sis"
                            android:layout_below="@id/tv_four"/>
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/eigth"
                            android:id="@+id/rb_number_eigth"
                            />
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/four"
                            android:id="@+id/rb_number_four"

                            />

                    </RadioGroup>

                </RelativeLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:id="@+id/cv_data8"
                android:layout_below="@id/cv_data7"
                android:elevation="15dp"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="15dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/how_many_is_"
                        android:id="@+id/tv_six"
                        android:textSize="18dp"
                        android:textColor="#0604a1"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />

                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/rdg_six"
                        android:layout_below="@+id/tv_six"
                        android:orientation="horizontal"
                        android:layout_marginBottom="10dp"
                        >
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/six_"
                            android:id="@+id/rb_number_six"
                            android:layout_below="@id/tv_four"/>
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/ten"
                            android:id="@+id/rb_number_ten"
                            />
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/seven"
                            />

                    </RadioGroup>

                </RelativeLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:id="@+id/cv_data9"
                android:layout_below="@id/cv_data8"
                android:elevation="15dp"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="15dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/how_many_is_eight"
                        android:id="@+id/tv_seven"
                        android:textSize="18dp"
                        android:textColor="#0604a1"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />

                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/rdg_seven"
                        android:layout_below="@+id/tv_seven"
                        android:orientation="horizontal"
                        android:layout_marginBottom="10dp"
                        >
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/nine"
                            android:layout_below="@id/tv_seven"/>
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/seven"
                            android:id="@+id/rb_number_seven"
                            />
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/one"
                            />

                    </RadioGroup>

                </RelativeLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:id="@+id/cv_data10"
                android:layout_below="@id/cv_data9"
                android:elevation="15dp"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="15dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/how_many_is_two"
                        android:id="@+id/tv_one"
                        android:textSize="18dp"
                        android:textColor="#0604a1"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />

                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/rdg_nine"
                        android:layout_below="@+id/tv_one"
                        android:orientation="horizontal"
                        android:layout_marginBottom="10dp"
                        >
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/eigth"
                            android:layout_below="@id/tv_one"/>
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/one"
                            android:id="@+id/rb_number_one"
                            />
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/four"
                            />

                    </RadioGroup>

                </RelativeLayout>
            </android.support.v7.widget.CardView>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/send"
                android:id="@+id/bt_enviar"
                android:textColor="@color/white"
                android:background="@drawable/button_login_form"
                android:layout_below="@id/cv_data10"
                />

        </RelativeLayout>

    </ScrollView>


</LinearLayout>
