<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alignmentMode="alignBounds">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:scrollbarThumbVertical="@drawable/scrollbar_vertical">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="4"
            android:rowCount="6"
            android:padding="10dp">

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/cv_group_c1"
                android:layout_width="wrap_content"
                android:layout_height="250dp"
                card_view:cardCornerRadius="4dp"
                card_view:cardBackgroundColor="#F5E5B2"
                card_view:cardUseCompatPadding="true"
                card_view:cardElevation="4dp"
                android:layout_column="0"
                android:layout_row="0"
                android:layout_marginRight="3dp">

                <ImageView
                    android:id="@+id/iv_red"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/red_bot"
                    android:padding="15dp"
                    android:layout_gravity="center"/>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/cv_group_c2"
                android:layout_width="wrap_content"
                android:layout_height="250dp"
                card_view:cardCornerRadius="4dp"
                card_view:cardBackgroundColor="#F5E5B2"
                card_view:cardUseCompatPadding="true"
                card_view:cardElevation="4dp"
                android:layout_column="1"
                android:layout_row="0"
                android:layout_marginRight="3dp">

                <ImageView
                    android:id="@+id/iv_blue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/blue_bot"
                    android:padding="15dp"
                    android:layout_gravity="center"/>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/cv_group_c3"
                android:layout_width="wrap_content"
                android:layout_height="250dp"
                card_view:cardCornerRadius="4dp"
                card_view:cardBackgroundColor="#F5E5B2"
                card_view:cardUseCompatPadding="true"
                card_view:cardElevation="4dp"
                android:layout_column="0"
                android:layout_row="1"
                android:layout_marginRight="3dp">

                <ImageView
                    android:id="@+id/iv_white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/white_bot"
                    android:padding="15dp"
                    android:layout_gravity="center"/>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/cv_group_c4"
                android:layout_width="wrap_content"
                android:layout_height="250dp"
                card_view:cardCornerRadius="4dp"
                card_view:cardBackgroundColor="#F5E5B2"
                card_view:cardUseCompatPadding="true"
                card_view:cardElevation="4dp"
                android:layout_column="1"
                android:layout_row="1"
                android:layout_marginRight="3dp">

                <ImageView
                    android:id="@+id/iv_green"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/green_bt"
                    android:padding="15dp"
                    android:layout_gravity="center"/>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/cv_group_c5"
                android:layout_width="wrap_content"
                android:layout_height="250dp"
                card_view:cardCornerRadius="4dp"
                card_view:cardBackgroundColor="#F5E5B2"
                card_view:cardUseCompatPadding="true"
                card_view:cardElevation="4dp"
                android:layout_column="0"
                android:layout_row="2"
                android:layout_marginRight="3dp">

                <ImageView
                    android:id="@+id/iv_yellow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/yellow_bot"
                    android:padding="15dp"
                    android:layout_gravity="center"/>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/cv_group_c6"
                android:layout_width="wrap_content"
                android:layout_height="250dp"
                card_view:cardCornerRadius="4dp"
                card_view:cardBackgroundColor="#F5E5B2"
                card_view:cardUseCompatPadding="true"
                card_view:cardElevation="4dp"
                android:layout_column="1"
                android:layout_row="2"
                android:layout_marginRight="3dp">

                <ImageView
                    android:id="@+id/iv_grey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/grey_bot"
                    android:padding="15dp"
                    android:layout_gravity="center"/>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/cv_group_c7"
                android:layout_width="wrap_content"
                android:layout_height="250dp"
                card_view:cardCornerRadius="4dp"
                card_view:cardBackgroundColor="#F5E5B2"
                card_view:cardUseCompatPadding="true"
                card_view:cardElevation="4dp"
                android:layout_column="0"
                android:layout_row="3"
                android:layout_marginRight="3dp">

                <ImageView
                    android:id="@+id/iv_pink"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/pink_but"
                    android:padding="15dp"
                    android:layout_gravity="center"/>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/cv_group_c8"
                android:layout_width="wrap_content"
                android:layout_height="250dp"
                card_view:cardCornerRadius="4dp"
                card_view:cardBackgroundColor="#F5E5B2"
                card_view:cardUseCompatPadding="true"
                card_view:cardElevation="4dp"
                android:layout_column="1"
                android:layout_row="3"
                android:layout_marginRight="3dp">

                <ImageView
                    android:id="@+id/iv_orange"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/orage_bot"
                    android:padding="15dp"
                    android:layout_gravity="center"/>

            </android.support.v7.widget.CardView>

        </GridLayout>

    </ScrollView>

</LinearLayout>



