                        android:layout_toRightOf="@id/iv_triangle"
                        android:layout_marginTop="25dp"
                        android:inputType="text"
                        />

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
